<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#001A15">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/ll1"
       android:orientation="vertical">

        <ImageView
            android:layout_marginTop="22dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/guestpic"
            android:layout_gravity="center_horizontal"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/profile_name"
           android:text="Hi Guest"
           android:textSize="50dp"
           android:textStyle="bold"
           android:textColor="#00E626"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="00dp"
           android:gravity="center_horizontal"
           />


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:elevation="10dp"
           android:backgroundTint="#D5FFCC"
           app:cardCornerRadius="10dp"
           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
       <TextView
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/age"
           android:text="Age: unknown"
           android:textSize="25dp"
           android:gravity="center_horizontal"
           />

       <TextView
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/sex"
           android:text="Sex:- Male"
           android:textSize="25dp"
           android:gravity="center_horizontal"
           />

       <TextView
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/weight"
           android:text="Weight: unknown"
           android:textSize="25dp"
           android:gravity="center_horizontal"
           />

       <TextView
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/height"
           android:text="Height: unknown"
           android:textSize="25dp"
           android:gravity="center_horizontal"
           />
        </LinearLayout>
       </androidx.cardview.widget.CardView>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="32dp"
           android:layout_gravity="center_horizontal"
           android:id="@+id/update"
           android:text="Update"
           android:textSize="25dp"
           android:backgroundTint="#B3D9FF"/>

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>